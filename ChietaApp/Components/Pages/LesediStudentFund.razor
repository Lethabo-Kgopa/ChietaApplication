<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lesedi Student Fund Application</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <div class="form-container2">
        <header>
            <a href="#" class="back-button">← Back</a>
            <h1>Lesedi Student Fund</h1>
            <p>Complete all required fields below</p>
        </header>

        <form>

            <!-- Personal Information Box -->
            <div class="form-section2">
                <h2>1. Personal Information</h2>
                <div class="form-group2">
                    <label>First Name</label>
                    <input type="text" placeholder="Enter First Name" required>
                </div>
                <div class="form-group2">
                    <label>Last Name</label>
                    <input type="text" placeholder="Enter Last Name" required>
                </div>
                <div class="form-row2">
                    <div class="form-group2">
                        <label>SA ID Number</label>
                        <input type="text" placeholder="Enter ID number" required>
                    </div>
                    <div class="form-group2">
                        <label>Age</label>
                        <input type="number" placeholder="How old are you?" required>
                    </div>
                </div>
                <div class="form-group2">
                    <label>Email Address</label>
                    <input type="email" placeholder="Enter your email" required>
                </div>
                <div class="form-row2">
                    <div class="form-group2">
                        <label>Race</label>
                        <select required>
                            <option value="">Select</option>
                            <option>Black</option>
                            <option>White</option>
                            <option>Coloured</option>
                            <option>Indian</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div class="form-group2">
                        <label>Gender</label>
                        <select required>
                            <option value="">Select</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-row2">
                    <div class="form-group2">
                        <label>District</label>
                        <select required>
                            <option value="">Select</option>
                            <!-- Add more districts -->
                        </select>
                    </div>
                    <div class="form-group2">
                        <label>Municipality</label>
                        <select required>
                            <option value="">Select</option>
                            <!-- Add more municipalities -->
                        </select>
                    </div>
                </div>
            </div>

            <!-- Educational Information Box -->
            <div class="form-section2">
                <h2>2. Educational Information</h2>
                <div class="form-group2">
                    <label>University</label>
                    <select required>
                        <option value="">Select your university</option>
                        <!-- Add universities -->
                    </select>
                </div>
                <div class="form-group2">
                    <label>Qualification</label>
                    <select required>
                        <option value="">Select your qualification</option>
                        <!-- Add qualifications -->
                    </select>
                </div>
                <div class="form-group2">
                    <label>Other qualification (if applicable)</label>
                    <input type="text" placeholder="Type your qualification">
                </div>
                <div class="form-group2">
                    <label>Currently studying? (Yes/No)</label>
                    <select required>
                        <option value="">Select</option>
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <div class="form-group2">
                    <label>Study Year</label>
                    <select required>
                        <option value="">Select YEAR of study</option>
                        <option>1st Year</option>
                        <option>2nd Year</option>
                        <option>3rd Year</option>
                        <option>4th Year</option>
                        <option>Final Year</option>
                        <option>Completed</option>
                    </select>
                </div>
                <div class="form-group2">
                    <label>Level of Study</label>
                    <select required>
                        <option value="">Select Level of Study</option>
                        <option>Undergraduate</option>
                        <option>Postgraduate</option>
                    </select>
                </div>
            </div>

            <!-- Financial Information Box -->
            <div class="form-section2">
                <h2>3. Financial Information</h2>
                <div class="form-group2">
                    <label for="nsfas">NSFAS Beneficiary (Yes/No)</label>
                    <select id="nsfas" name="nsfas" required>
                        <option value="">Select</option>
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                </div>

                <div class="form-group2">
                    <label for="debt-status">Debt Status (Current/Historical)</label>
                    <select id="debt-status" name="debt-status" required>
                        <option value="">Select debt status</option>
                        <option value="current">Current</option>
                        <option value="historical">Historical</option>
                    </select>
                </div>

                <div class="form-group2">
                    <label for="balance">Balance (R)</label>
                    <input type="number" id="balance" name="balance" value="0.00" step="0.01" required>
                </div>

                <div class="form-group2">
                    <label for="average-marks">Average Marks (%)</label>
                    <input type="number" id="average-marks" name="average-marks" placeholder="Enter average marks (%)" min="0" max="100" required>
                </div>

                <div class="form-group2">
                    <label for="consent-date">Consent Date</label>
                    <input type="date" id="consent-date" name="consent-date" required>
                </div>
            </div>

            <button type="submit" class="submit-button2">Submit Lesedi Student Fund Application</button>
        </form>
    </div>

</body>

</html>


