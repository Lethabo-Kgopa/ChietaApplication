@page "/mandatory-SDF-Details"

<!-- HEADER -->
<div class="grant-header">
    <a class="back-button" href="#">← Back</a>
    <h2>Mandatory Grant Application</h2>
    <p>MG 2023 - Mandatory Grants 2023</p>
</div>

<!-- TABS -->
<div class="tabs">
    <button class="tab active">SDF Details</button>
    <button class="tab">Summary</button>
    <button class="tab">Payment Overview</button>
    <button class="tab">Downloads</button>
</div>

<!-- FORM SECTION -->
<div class="form-section">
    <h3 class="section-title">SDF Details</h3>

    <div class="form-grid">
        <div class="form-group">
            <label>Designation</label>
            <input type="text" class="form-control" value="SDF" />
        </div>

        <div class="form-group">
            <label>Title</label>
            <select class="form-control">
                <option>Mr</option>
                <option selected>Mrs</option>
                <option>Ms</option>
                <option>Dr</option>
            </select>
        </div>

        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" value="Sylvia" />
        </div>

        <div class="form-group">
            <label>Middle Name</label>
            <input type="text" class="form-control" value="Ntombiyoxolo" />
        </div>

        <div class="form-group full-width">
            <label>Last Name</label>
            <input type="text" class="form-control" value="Manthata" />
        </div>

        <div class="form-group full-width">
            <label>Email Address</label>
            <input type="email" class="form-control" value="sylvia.manthata@company.gov.za" />
        </div>
    </div>
</div>

