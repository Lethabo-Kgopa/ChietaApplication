    <NavLink href="/LesediStudentFund" class="footer-tab4" activeClass="active4">
        <div class="icon4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 24 24">
                <path d="M12 3L1 9l11 6 9-4.91V17h2V9L12
                3zm0 13.09L3.74 10.5 12 6l8.26
                4.5L12 16.09zM11 18h2v3h-2z" />
            </svg>
        </div>
        <div class="label4">Lesedi<br />Student Fund</div>
    </NavLink>
</footer>


@code {
    [Inject]
    NavigationManager Navigation { get; set; }

    void GoToLinkedOrganisation()
    {
        Navigation.NavigateTo("/linked-organisations");
    }
}
